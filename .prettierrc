{
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "importOrder": [
    "^(react$)|^(react/(.*)$)",
    "^(next$)|^(next/(.*)$)",
    "<THIRD_PARTY_MODULES>",
    "^@(.*)$",
    "^([./])|^([../])"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ]
}
